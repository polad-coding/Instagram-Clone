<div id="like-icon-container" data-postId="@ViewBag.PostId">
    @if (ViewBag.IsLiked)
    {
        <a id="unlike-button" style="display:inline;">
            <img src="~/Pics/icons8-like.png" style="height:33px;width:33px;" />
        </a>
        <a id="like-button" style="display:none;">
            <img src="~/Pics/Instagram-UI_like-512.png" style="height:35px;width:35px;" />
        </a>
    }
    else
    {
        <a id="like-button" style="display:inline;">
            <img src="~/Pics/Instagram-UI_like-512.png" style="height:35px;width:35px;" />
        </a>
        <a id="unlike-button" style="display:none;">
            <img src="~/Pics/icons8-like.png" style="height:33px;width:33px;" />
        </a>
    }
</div>
<script src="~/Scripts/LikeButtonActionsScript.js"></script>